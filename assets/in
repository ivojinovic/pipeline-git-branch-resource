#!/bin/sh
# vim: set ft=sh

set -e

exec 3>&1 # make stdout available as fd 3 for the result
exec 1>&2 # redirect all output to stderr for logging

source $(dirname $0)/common.sh
source $(dirname $0)/branches_common.sh

destination=$1
if [ -z "$destination" ]; then
  echo "usage: $0 <path/to/destination>" >&2
  exit 1
fi

# for jq
PATH=/usr/local/bin:$PATH

payload=$(mktemp $TMPDIR/git-resource-request.XXXXXX)
cat > $payload <&0
load_pubkey $payload
configure_git_ssl_verification $payload
configure_credentials $payload

# Get the parameters for this resource instance
source $(dirname $0)/export_parameter_values.sh
export_parameter_values $payload

# Get the list of active dev branches
clone_git_repo_into_directory $PARAM_APP_GIT_URI $CONST_APP_GIT_DIR
cd $CONST_APP_GIT_DIR
LOC_APP_DEV_BRANCHES=$(git branch -r --no-merged | sed "s/origin\///" | $PARAM_APP_BRANCH_FILTER_PIPE | xargs)

# Log in to concourse
CONCOURSE_TARGET=savannah
echo -e "$PARAM_CONCOURSE_USERNAME\n$PARAM_CONCOURSE_PASSWORD\n" | fly -t $CONCOURSE_TARGET login --concourse-url $PARAM_CONCOURSE_URL

# Create the pipeline for the active dev branches
# TODO: This needs to be a parameter
TEMPLATE_TOKEN=unmerged-branches-template
LOCAL_OR_CONCOURSE=CONCOURSE

/opt/resource/set_dev_branches_pipeline.sh \
    $CONCOURSE_TARGET \
    $PARAM_APP_PIPELINE_NAME \
    $LOCAL_OR_CONCOURSE \
    $TEMPLATE_TOKEN \
    $LOC_APP_DEV_BRANCHES

jq -n "{
  version: {ref: $(echo $new_branch_list | jq -R .)}
}" >&3
